{erl_opts, [debug_info]}.
{deps, []}.

{pre_hooks, [
	{"(linux|darwin|solaris)", compile, "make -C c_src"},
	{"(freebsd)", compile, "gmake -C c_src"},
	{"win32", compile, "mkdir build & cd build & cmake ../c_src -A x64 & cmake --build . --config Release & cd .. & mkdir priv & copy /Y build\\Release\\ar_sqlite3_driver.exe priv\\ar_sqlite3_driver.exe"}
]}.

{post_hooks, [
	{"(linux|darwin|solaris)", clean, "make -C c_src clean"},
	{"(freebsd)", clean, "gmake -C c_src clean"}
]}.
